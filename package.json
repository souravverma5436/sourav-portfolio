{
  "name": "sourav-portfolio",
  "version": "1.0.0",
  "description": "Sourav Verma - Graphic Designer Portfolio",
  "main": "server/index.js",
  "scripts": {
    "setup": "node setup.js",
    "troubleshoot": "node troubleshoot.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "cd client && npm run dev",
    "server": "cd server && npm run dev",
    "mobile": "cd mobile && npm start",
    "mobile:android": "cd mobile && npm run android",
    "mobile:ios": "cd mobile && npm run ios",
    "build": "cd client && npm run build",
    "build:mobile": "cd mobile && eas build --platform all",
    "start": "cd server && npm start",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install && cd ../mobile && npm install && cd ..",
    "clean": "rm -rf node_modules client/node_modules server/node_modules mobile/node_modules client/dist",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": ["portfolio", "graphic-design", "react", "node"],
  "author": "Sourav Verma",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}